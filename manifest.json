{
  "manifest_version": 3,
  "name": "AI Companion",
  "version": "1.0",
  "description": "Split screen view for Deepseek and Grok with synchronized input",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "declarativeNetRequest",
    "declarativeNetRequestFeedback"
  ],
  "host_permissions": [
    "https://chat.deepseek.com/*",
    "https://grok.com/*",
    "https://www.doubao.com/*",
    "chrome-extension://*"
  ],
  "action": {
    "default_title": "AI Chat Companion",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.deepseek.com/*",
        "https://grok.com/*",
        "https://www.doubao.com/*"
      ],
      "js": ["content.js"],
      "all_frames": true,
      "match_about_blank": true,
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [{
    "resources": ["split.html", "inject.js", "sites.js"],
    "matches": [
      "https://chat.deepseek.com/*",
      "https://grok.com/*",
      "https://www.doubao.com/*",
      "chrome-extension://*/*"
    ]
  }],
  "declarative_net_request": {
    "rule_resources": [{
      "id": "ruleset_1",
      "enabled": true,
      "path": "rules.json"
    }]
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'; frame-src 'self' https://chat.deepseek.com https://grok.com https://www.doubao.com"
  }
} 